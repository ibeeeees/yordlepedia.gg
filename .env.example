# === Riot API Configuration ===
RIOT_API_KEY=your_riot_api_key_here

# === AWS Cognito Configuration ===
AWS_REGION=us-east-1
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=your_cognito_client_id
COGNITO_CLIENT_SECRET=your_cognito_client_secret
COGNITO_DOMAIN=your-cognito-domain

# === Riot OAuth Configuration ===
RIOT_CLIENT_ID=your_riot_oauth_client_id
RIOT_CLIENT_SECRET=your_riot_oauth_client_secret

# === AWS S3 Configuration (for video uploads) ===
AWS_S3_BUCKET=yordlepedia-clips
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# === PostgreSQL Configuration ===
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=yordlepedia

# === Server Configuration ===
PORT=3000
AUTH_REDIRECT_URI=http://localhost:3000/auth/callback
RIOT_REDIRECT_URI=http://localhost:3000/auth/riot/callback

# === Prefetch Configuration (optional) ===
# Format: region:gameName#tagLine,region:gameName#tagLine
PREFETCH_SUMMONERS=na1:ibes#na1

# === Match History Configuration (optional) ===
MATCH_HISTORY_COUNT=10
MATCH_DETAIL_CONCURRENCY=4
